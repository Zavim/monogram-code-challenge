---
import rect1 from "/images/rect1.svg";
import rect2 from "/images/rect2.svg";
import transrect1 from "/images/transrect1.svg";
import transrect2 from "/images/transrect2.svg";
---

<div class="rectangles-container">
  <img class="rect1" src={rect1} alt="orange rectangle graphic" />
  <img class="rect2" src={rect2} alt="orange rectangle graphic" />
  <img
    class="transrect1"
    src={transrect1}
    alt="transparent rectangle graphic"
  />
  <img
    class="transrect2"
    src={transrect2}
    alt="transparent rectangle graphic"
  />
</div>
<style>
  .rectangles-container {
    position: absolute;
    left: 48.5rem;
    top: 9.56rem;
    width: 47.75rem;
    /* margin: 9.56rem 0 0 48.5rem; */
  }
  .rect1 {
    position: absolute;
    top: 10.69rem;
    right: 28.5rem;
  }
  .rect2 {
    position: absolute;
    right: 8.25rem;
  }
  .transrect1 {
    position: absolute;
    right: 20rem;
    top: 30.31rem;
  }
  .transrect2 {
    position: absolute;
    right: 0rem;
    top: 18.88rem;
  }
  .transrect1,
  .transrect2 {
    border-radius: 4.25rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(60px);
  }
</style>
