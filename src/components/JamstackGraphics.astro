---
import mouse from "/images/mouse.svg";
import rectangles from "/images/rectangles.png";
---

<>
  <img
    class="mouse"
    src={mouse}
    alt="computer mouse with dotted line leading down the page, indicating the user to scroll down"
  />
  <!-- using img instead of svg because svg didn't preserve the blur on the transparent rects -->
  <img class="rectangles" src={rectangles} alt="4 rounded rectangles" />
</>

<style>
  .rectangles {
    position: absolute;
    top: 0;
    right: -1.75rem;
    width: min(50.53%, 47.75rem);
  }
  .mouse {
    position: absolute;
    left: 24.6%;
    width: min(3rem, 5.0625rem);
    top: 128.69%;
  }
</style>
